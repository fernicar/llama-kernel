{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Server",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& { . 'G:\\llama-kernel\\.venv\\Scripts\\Activate.ps1'; python 'G:\\llama-kernel\\server.py' --fidelity-log }"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$python"]
